@model MainViewModel

<div class="text-center">
    <h1 class="display-4">Phone book</h1>
    <table class="table table-bordered">
        <tr>
            <th>Name</th>
            <th>Number</th>
        </tr>
    @foreach(var contact in @Model.GetContacts())
    {
        <tr>
                <td>@contact.name </td>
                <td>@contact.number</td>
                <td>
                <form asp-action="Remove" asp-route-id="@contact.id" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
                    <form asp-action="Modify" asp-route-id="@contact.id" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Modify</button>
                </form>
                </td>
        </tr>
    }
    </table>
    <a asp-controller="Home" asp-action="Create">Create</a>
</div>
